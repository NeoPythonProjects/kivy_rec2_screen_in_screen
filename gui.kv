#: kivy 2.1.0
<WelcomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 50, 5
        Label:
            text: 'first row of welcome screen'
        Label:
            text: 'more text for welcome screen'
        Button:
            text: 'go to second screen'
            on_release: root.click_button()

<SecondScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 50, 5
        Label:
            text: 'first row of second screen'
        Label:
            text: 'more text for second screen'
        Button:
            text: 'go to welcome screen'
            on_release: app.root.ids['sm'].current = 'welcome_screen'


# root = box layout
BoxLayout:
    orientation: 'vertical'
    # header row in separate GridLayout
    GridLayout:
        size_hint_y: 0.2
        cols: 2
        Label:
            text: 'Header Information'
        Image:
            source: 'Logo_Wix.png'
    # main screen
    # stick in a BoxLayout and give different background colour
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0.5, 0.5, 0.5, 1
            Rectangle:
                pos: self.pos
                size: self.size
        # I WANT MY SCREENS TO SIT HERE, BETWEEN
        # HEADER AND FOOTER
        ScreenManager:
            id: sm
            WelcomeScreen:
                name: 'welcome_screen'
            SecondScreen:
                name: 'second_screen'

    # footer
    Label:
        size_hint_y: 0.1
        text: 'Footer Information'
